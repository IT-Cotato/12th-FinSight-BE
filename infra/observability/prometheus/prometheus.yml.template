global:
  scrape_interval: 60s
  external_labels:
    environment: "${ENVIRONMENT}"
    service: "finsight"

remote_write:
  - url: ${GRAFANA_REMOTE_WRITE_URL}
    basic_auth:
      username: ${GRAFANA_CLOUD_USER}
      password: ${GRAFANA_CLOUD_API_KEY}

scrape_configs:
  - job_name: "finsight-app"
    metrics_path: "/actuator/prometheus"
    static_configs:
      - targets: ["host.docker.internal:8080"]
